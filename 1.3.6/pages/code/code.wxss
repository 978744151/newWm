/**index.wxss**/

page {
    height: 100%;
    background: #f6f6f6;
}
.rp-foot {
    position: absolute;
    left: 0;
    bottom: 0;
    text-align: center;
    padding: 25rpx 0;
    width: 100%;
    z-index: -2;
}

.rp-foot .img {
    width: 100%;
    height: 84rpx;
    background: url('https://pic.repaiapp.com/pic/05/25/31/052531731aeab17ee0b85a11c74a7da348631ee0.png') center no-repeat;
    background-size: auto 84rpx;
}
.bg_content{
    position: fixed;
    top: 30%;
    left: 50%;
    width: 80%;
    margin-left: -40%;
    text-align: center;
    font-size: 28rpx;
}
.bg_tk{
    background-color: #fff;
    padding: 20px 25px;
    border-top-left-radius: 8px;
    border-top-right-radius: 8px;
    color: #000;
}
.bg_tk view:last-child{
    margin-top: 10px;
}
.bg_bg{
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.4);
    position: fixed;
    left: 0;
    top: 0;
    z-index: -1;
}
.bg_know{
    background-color: #fff;
    padding: 10px;
    border-top: 1px #e8e8e8 solid;
    border-bottom-left-radius: 8px;
    border-bottom-right-radius: 8px;
    color: #e63838;
}
