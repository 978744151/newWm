/* pages/recharge/recharge.wxss */
.balance{
    width: 100%;
    height: 328rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    color: #111111;
    font-size: 28rpx;
    line-height: 1;
}
.balance image{
    width: 99rpx;
    height: 97rpx;
}
.balance .text{
    margin: 30rpx 0 20rpx 0;
}
.balance .num{
    font-size: 44rpx;
    font-weight: 600rpx;
}
.line{
    height: 30rpx;
    background: #f9f9f9
}

/*选择金额  */
.select_money{
    padding: 45rpx 30rpx;
    box-sizing: border-box;
    
}
.select_money::after{
    content: '';
    display: block;
    clear: both;
}
.select_money .item{
    width: 30.4%;
    height: 120rpx;
    border-radius: 5rpx;
    border: 1px solid #dcdcdc; 
    float: left;
    margin-right: 3.33%;
    margin-bottom: 30rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
}
.select_money .item:nth-child(3n){
    margin: 0;
}
.item text:first-child{
    color: #4c4c4c;
    font-size: 30rpx;
}
.item text:nth-child(2){
    color: #4c4c4c;
    font-size: 24rpx;
    margin-top: 10rpx;
}
.item.active{
    border: 1px solid #40baf0;
    background: url('https://pic.repaiapp.com/static/png/20180621/19/1529578849942705299.png') no-repeat right bottom;
    background-size: 35rpx 35rpx;
}

.footer{
    position: fixed;
    left: 0;
    right: 0;
    bottom: 55rpx;
    display: flex;
    align-items: center;
    flex-direction: column;
}
.footer .btn{
    width: 450rpx;
    height: 90rpx;
    border-radius: 45rpx;
    border: 1px solid #40baf0;
    color: #40baf0;
    font-size: 34rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}
.footer text{
    color: #7e7e7e;
    font-size: 22rpx;
    margin-top: 20rpx;
}
.footer .rule{
    color: #48a8d2;
}


