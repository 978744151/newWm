.fade-up {
    animation: fadeUp .3s forwards;
}

@keyframes fadeUp {
    from {
        opacity: 0;
        -webkit-transform: translate3d(0, -100%, 0);
        transform: translate3d(0, -100%, 0);
    }
    to {
        opacity: 1;
        -webkit-transform: none;
        transform: none;
    }
}


.fade-into {
    animation: fadeInto .3 forwards;
}

@keyframes fadeInto {
    from {
        opacity: 0;
    }
    to {
        opacity: 1;
    }
}


.shopDiscount.sider-up {
    /*animation: silderUp .8 linear;*/
    -webkit-transform: none;
    transform: none;
    -webkit-transition: transform .3s ease;
    transition: transform .3s ease;
}

.shopDiscount.silder-down {
    -webkit-transform: translate3d(0, 100%, 0);
    transform: translate3d(0, 100%, 0);
    -webkit-transition: transform .3s ease;
    transition: transform .3s ease;
}

@keyframes silderUp {
    from {
        opacity: 0;
        -webkit-transform: translate3d(0, 100%, 0);
        transform: translate3d(0, 100%, 0);
    }
    to {
        opacity: 1;
        -webkit-transform: none;
        transform: none;
    }
}

.sider-down {
    animation: silderDown .8 linear;
}

@keyframes silderDown {
    from {
        opacity: 0;
        -webkit-transform: none;
        transform: none;
    }
    to {
        opacity: 1;
        -webkit-transform: translate3d(0, 100%, 0);
        transform: translate3d(0, 100%, 0);
    }
}

