/*提示信息  */

.hint {
    width: 100%;
    position: fixed;
    left: 0;
    top: 0;
    height: 67rpx;
    background: #ff4144;
    line-height: 67rpx;
    text-align: center;
    color: #fff;
}

.title {
    color: #000;
    line-height: 100rpx;
    padding-left: 6.7%;
}

.moneyInfo {
    width: 96%;
    background: #fff;
    border-radius: 10rpx;
    margin: 0 auto;
    padding-bottom: 32rpx;
}

.totle {
    height: 100rpx;
    border-bottom: 1px dashed #e5e5e5;
    display: flex;
    align-items: center;
}

.totle .totleText {
    display: block;
    line-height: 100rpx;
    margin-right: 20rpx;
    white-space: nowrap;
}

.totle .totleInput {
    display: flex;
    align-items: center;
}

.totle .totleInput text {
    display: inline-block;
}

.totle .totleInput input {
    font-size: 28rpx;
    font-family: '微软雅黑';
}

.totle,
.noDiscount,
.discount {
    padding-left: 30rpx;
}

.noDiscount {
    border-bottom: 1px solid #e5e5e5;
    height: 100rpx;
    display: flex;
    align-items: center;
}

.noDiscount image {
    width: 34rpx;
    height: 34rpx;
    margin-right: 20rpx;
    vertical-align: middle;
}

.noDiscount .noDisinput {
    padding-left: 0;
    border: none;
}

.noDiscount .noDisinput .noDisinput2 {
    height: 100rpx;
}

.discount .discT {
    color: #a3a3a3;
}

.discount .discT text {
    line-height: 100rpx;
    float: left;
}

f .discount .discT .minus {
    margin-left: 10rpx;
    color: #f65903
}

.discount .discT image {
    width: 12rpx;
    height: 22rpx;
    float: right;
    margin-right: 30rpx;
    margin-top: 35rpx;
}

.discount .discB {
    font-size: 80rpx;
    color: #000;
    font-weight: bold;
    text-align: center;
    padding: 30rpx 0 60rpx;
}

.discount .discB .money {
    position: relative;
    font-size: 100rpx;
    left: -20rpx;
}

.discount .discB .sign {
    font-weight: 500;
    font-size: 50rpx;
    position: relative;
    top: -20rpx;
    left: -20rpx;
}

.discount .discB .yyh {
    font-size: 28rpx;
    display: block;
    top: 10rpx;
}



