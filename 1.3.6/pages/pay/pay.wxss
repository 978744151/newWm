/* pages/pay/pay.wxss */

page {
    font-family: '微软雅黑';
    background: #eae9ee;
    margin: 0;
    padding: 0;
    overflow-x: hidden;
    font-size: 28rpx;
    width: 100%;
    height: 100%;
}

.placeholderClass {
    font-family: '微软雅黑';
    font-size: 28rpx;
}

.clearfix:after {
    content: '';
    display: block;
    height: 0;
    clear: both;
}

.banner {
